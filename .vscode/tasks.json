{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake: Configure",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-B",
        "${workspaceFolder}/build",
        "-S",
        "${workspaceFolder}",
        "-G",
        "MinGW Makefiles",
        "-DCMAKE_BUILD_TYPE=Debug"
      ],
      "group": "build",
      "problemMatcher": [],
      "detail": "Configure CMake project"
    },
    {
      "label": "CMake: Build",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}/build",
        "--config",
        "Debug",
        "--",
        "-j",
        "4"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "dependsOn": "CMake: Configure",
      "detail": "Build the project using CMake"
    },
    {
      "label": "CMake: Clean",
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "${workspaceFolder}/build", "--target", "clean"],
      "group": "build",
      "problemMatcher": [],
      "detail": "Clean build artifacts"
    },
    {
      "label": "CMake: Rebuild",
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "${workspaceFolder}/build", "--clean-first"],
      "group": "build",
      "problemMatcher": ["$gcc"],
      "detail": "Clean and rebuild the project"
    },
    {
      "label": "Run Application",
      "type": "shell",
      "command": "${workspaceFolder}/build/bin/FootballFieldManager.exe",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": [],
      "dependsOn": "CMake: Build",
      "detail": "Run the compiled application"
    },
    {
      "label": "Build and Run",
      "type": "shell",
      "command": "${workspaceFolder}/build/bin/FootballFieldManager.exe",
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "problemMatcher": [],
      "dependsOn": ["CMake: Configure", "CMake: Build"],
      "detail": "Auto build and run application"
    }
  ]
}
